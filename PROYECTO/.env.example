# Configuración de la aplicación
APP_NAME="Sistema de Gestión de Reclamos"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/PROYECTO

# Configuración de la base de datos
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=nombre_base_datos
DB_USERNAME=usuario
DB_PASSWORD=contraseña
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Configuración de sesión
SESSION_LIFETIME=7200
SESSION_COOKIE_NAME=proyecto_session
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=Lax

# Configuración de seguridad
APP_KEY=
HASH_ALGO=bcrypt
PASSWORD_MIN_LENGTH=8

# Configuración de archivos
UPLOAD_MAX_SIZE=5242880
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx
UPLOAD_PATH=uploads

# Configuración de logs
LOG_CHANNEL=file
LOG_LEVEL=debug
LOG_PATH=logs/app.log

# Configuración de paginación
PAGINATION_PER_PAGE=10
PAGINATION_MAX_RESULTS=100

# Configuración de zona horaria
TIMEZONE=America/Panama

# Configuración de cache
CACHE_DRIVER=file
CACHE_PREFIX=proyecto_

# URLs y rutas
BASE_PATH=/PROYECTO
PUBLIC_PATH=/PROYECTO/public
ASSETS_PATH=/PROYECTO/public/assets
