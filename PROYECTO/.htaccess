RewriteEngine On
RewriteBase /PROYECTO/

# Permitir acceso a archivos públicos (CSS, JS, imágenes, etc.)
RewriteRule ^public/ - [L]

# Permitir acceso a archivos PHP específicos de autenticación
RewriteRule ^auth/(login|register|logout)\.php$ - [L]

# Si el archivo o directorio existe, permitir acceso directo
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Enrutar todo a router.php
RewriteRule ^(.*)$ router.php?url=$1 [QSA,L]